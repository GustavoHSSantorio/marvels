<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/characters_navigation_graph"
    app:startDestination="@id/characters">

    <fragment
        android:id="@+id/characters"
        android:label="fragment_characters"
        android:name="br.com.marvel.characters.list.presentation.CharacterListFragment">
        <action
            android:id="@+id/action_character_to_comics"
            app:destination="@+id/comics"/>
    </fragment>

    <fragment
        android:id="@+id/comics"
        android:label="fragment_comics"
        android:name="br.com.marvel.comics.presentation.ComicsListFragment"/>

</navigation>